<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTotitleBar" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoTotitleBar.Splash" parent="AppTheme.NoTotitleBar">
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tv_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/rb_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonStyle2" parent="RadioButtonStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="classButtonStyle" parent="RadioButtonStyle2"></style>

    <!-- 页面header中间标题 -->
    <style name="H1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="H1_1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H2_2">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 文章标题字体，消息页消息发送者名称，聊天字体大小 -->
    <style name="H3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="H3_1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H3_2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:textColorHint">#eeeeee</item>
    </style>

    <style name="H3_3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/pink_F4CCD5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowColor">#eeeeee</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="H3_4">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="H4">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/pink_F4CCD5</item>
    </style>

    <style name="H4_1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#a9a9a9</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="H4_2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#eeeeee</item>
    </style>

    <!-- 文章作者字体，消息页消息发送日期，聊天页日期 -->
    <style name="H5">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#a9a9a9</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="H5_1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffbbbbbb</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GuideButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="RedGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_out</item>
    </style>

</resources>
